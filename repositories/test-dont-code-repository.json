{
  "$schema": "https://dont-code.net/schemas/v1/repository-schema.json",
  "name": "Dont-code Repository",
  "description": "Repository with all plugins for managing Dont-code environment.",
  "plugins": [
    {
      "id": "Basic",
      "display-name": "Basic plugin for editing entities",
      "version": "1.0.0",
      "info": {
        "remote-entry":"https://dont-code.net/plugins/remoteEntry.mjs"
      },
      "config": {}
    },
    {
      "id": "Fields",
      "display-name": "Additional editors for entity properties",
      "version": "1.0.0",
      "info": {
        "remote-entry":"https://dont-code.net/plugins/remoteEntry.mjs"
      },
      "config": {}
    },
    {
      "id": "Rest",
      "display-name": "Plugins to support datasources from Rest API",
      "version": "1.0.0",
      "info": {
        "remote-entry":"https://dont-code.net/plugin-rest/remoteEntry.mjs"
      },
      "config": {
        "definition-updates": [{
          "location": {
            "parent": "creation/sources",
            "id": "*"
          },
          "update": {
            "name": "Dont-Code Sessions Source",
            "type": "Rest",
            "url": "https://test.dont-code.net/preview/sessions?srcInfo=demo"
          }
        },{
          "location": {
            "parent": "creation/entities",
            "id": "*"
          },
          "update": {
            "name": "Session",
            "from": "Dont-Code Sessions Source",
            "fields": {
              "aa": {
                "name": "startTime",
                "type": "Date & Time"
              },
              "ab": {
                "name": "endTime",
                "type": "Date & Time"
              },
              "ac": {
                "name": "isDemo",
                "type": "boolean"
              },
              "ad": {
                "name": "elementsCount",
                "type": "Number"
              }
            }
          }
        }]
      }
    }
  ]
}
